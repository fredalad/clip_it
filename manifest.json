{
  "manifest_version": 3,
  "name": "Clip it Club",
  "version": "1.1",
  "description": "Automatically clips coupons from grocery stores",
  "permissions": [
    "webRequest",
    "scripting",
    "tabs",
    "cookies"
  ],
  "host_permissions": [
    "https://www.kroger.com/*",
    "https://www.ralphs.com/*",
    "https://www.dillons.com/*",
    "https://www.smithsfoodanddrug.com/*",
    "https://www.kingsoopers.com/*",
    "https://www.frysfood.com/*",
    "https://www.qfc.com/*",
    "https://www.citymarket.com/*",
    "https://www.jaycfoods.com/*",
    "https://www.pay-less.com/*",
    "https://www.bakersplus.com/*",
    "https://www.gerbes.com/*",
    "https://www.harristeeter.com/*",
    "https://www.picknsave.com/*",
    "https://www.metromarket.net/*",
    "https://www.marianos.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.kroger.com/savings/cl/*",
        "https://www.ralphs.com/savings/cl/*",
        "https://www.dillons.com/savings/cl/*",
        "https://www.smithsfoodanddrug.com/savings/cl/*",
        "https://www.kingsoopers.com/savings/cl/*",
        "https://www.frysfood.com/savings/cl/*",
        "https://www.qfc.com/savings/cl/*",
        "https://www.citymarket.com/savings/cl/*",
        "https://www.jaycfoods.com/savings/cl/*",
        "https://www.pay-less.com/savings/cl/*",
        "https://www.bakersplus.com/savings/cl/*",
        "https://www.gerbes.com/savings/cl/*",
        "https://www.harristeeter.com/savings/cl/*",
        "https://www.picknsave.com/savings/cl/*",
        "https://www.metromarket.net/savings/cl/*",
        "https://www.marianos.com/savings/cl/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/kroger/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
